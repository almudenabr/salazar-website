---
import Logo from '../assets/logo_salazar.svg';
import { t } from 'i18next'

---
<footer class="footer">
  <div class="wrapper">
    <div class="footer-wrapper">
      <div class="footer-logo">
        <div class="logo">
          <Logo height={32} width={130}/>
        </div>
        <h5>{t('footer.payoff')}</h5>
      </div>
      <div class="footer-policy">
        <div>
          <a class="link" href="/policy/">{t('footer.privacy')}</a>
        </div>
        <div> 
          <a class="link" href="/cookie/">{t('footer.cookie')}</a>
        </div>
      </div>
      <div class="footer-copyright">
        <p>
          <a class="link" href="https://www.sorint.com" target="_blank">{t('footer.site')}</a>
          <span>{t('footer.disclaimer')}</span>
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  
</script>

<style>
  footer{
    width:100%;
    margin-top:80px;
    background: linear-gradient(0deg, rgba(98,186,243,0.4) 0%, rgba(98,186,243,0) 90%);
    box-shadow: inset 0 -18px 0px -10px rgb(var(--highlight));
    padding-block: 40px;
  }
  .footer-wrapper{
    display: flex;
    flex-flow: column;
    flex-wrap: wrap;
    gap:40px
  }
  .footer-logo{
    max-width:274px;
  }
  .footer-policy{
    display: flex;
    flex-flow: column;
    gap:20px
  }

  @media screen and (min-width: 768px){
    .footer-wrapper{
    display: flex;
    flex-flow: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap:40px
  }
  .footer-logo{
    width: 100%;
  }
    .footer-policy{
    display: flex;
    flex-flow: row;
    gap:20px
  }
  .footer-copyright{
    width: 100%;
    justify-items: center;
  }
    
  }
  @media screen and (min-width: 1440px){
    .footer-wrapper{
      justify-content: space-between;
      align-items: center;
      flex-flow: row;
    }
    .footer-logo{
      width: 33%;
    }
    .footer-policy{
    display: flex;
    flex-flow: row;
    gap:20px
  }
    .footer-copyright{
      width: fit-content;
    justify-items: initial;
  }
    
    
  }
  .link{
    text-decoration: underline;
  }
  
</style>