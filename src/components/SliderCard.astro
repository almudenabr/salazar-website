---
const {class:className, cardId, cardDescription, cardHeader, cardSubheader, ...rest} = Astro.props
---
<div class={className}{...rest} id={cardId} class:list={['card']}>    
  <div class="card-content">
    <div class="card-headers">
      <p class:list={['card-header']}>
        {cardHeader}
      </p>
      <p class:list={['card-subheader']}>
        {cardSubheader}
      </p>  
    </div>    
    <div class="card-description">
      <p>{cardDescription}</p>
    </div>
  </div>
</div>

<style>
  .card {
    width: 100%;
    background: #1b303d;
    border-radius: 20px;
    padding: 33px 20px;
    display: flex;
    flex-flow: column;
    gap:40px;
    position: relative;
    overflow: hidden;
  }
  .card-content{
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 25px;
  }
  .card-header{
    font-size: 30px;
    line-height: 100%;
    font-weight: 700;
  }
  .card-subheader{
    font-size: 24px;
    line-height: 36px;
    font-weight: 700;
    color: #EBEBEB;
  }
  .card-headers{    
    gap: 25px;
  }
  .card-headers,
  .card-description {   
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center; 
    box-sizing: border-box;
    white-space: pre-line;
  }

  @media screen and (min-width:768px) {
    .card-header{
      white-space: pre-line;
    }
    .card-content{
      flex-direction: row;
    }
    .card-headers,
    .card-description {   
      width: 50%;
    }
  }  
</style>