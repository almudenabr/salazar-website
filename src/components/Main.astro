---
import Presentation from './SectionPresentation.astro';
import Challenges from './SectionChallenges.astro';
import Features from './SectionFeatures.astro';
import Form from './SectionForm.astro';
import Hero from './SectionHero.astro';
---
<main>
  <section class="main-section-hero">
    <Hero />
  </section>
  <section class="main-section-presentation">
    <Presentation />
  </section>
  <section class="main-section-features">
    <Features />
  </section> 
  <section class="main-section-challenges">
    <Challenges />
  </section> 
  <section class="main-section-form">
    <Form />
  </section>
</main>

<style>
  main{
    display: flex;
    flex-flow: column;
    gap: 80px;
    width: 100%;
  }
  .main-section-hero{
    position: relative;
    z-index: 0;
  }
  .main-section-hero::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 568px;
    margin-top: 40px;
    background: linear-gradient(
      to bottom,
    rgba(11, 11, 11, 0) 0%,    
    rgba(11, 11, 11, 0) 80%,  
    rgba(11, 11, 11, 0.6) 100%   
    ), url('/images/bgImg_Hero_DarkDeath2x.png'); 
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center 1%;
    z-index: -1;
  }

  .main-section-features{
    position: relative;
  }

  .main-section-features::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 730px;
    background: linear-gradient(
      190deg, 
      rgba(11, 11, 11, 0.20) 28.3%, 
      rgba(76, 167, 223, 0.20) 48.66%, 
      rgba(11, 11, 11, 0.20) 71.03%);
    backdrop-filter: blur(15px);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center 3%;
    z-index: -1;
  }
 
  .main-section-challenges{
    position: relative;
  }
  .main-section-challenges::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 760px;
    background:linear-gradient(
      rgba(11,11,11,100),
      #00000080 25% 50%,
      rgba(11,11,11,100)),
      url(/images/bgSection_Challenges.png);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center 3%;
    z-index: -1;
  }
  .main-section-presentation{
    background: linear-gradient(
      0deg,
      #62baf300 7%,
      #62baf333 31%,
      #62baf340 55%,
      #62baf333 65%,
      #62baf300 101%
      )
  }
  .main-section-form{
    background: url('/images/bgImg_Hero_DarkDeath2x.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center top;
    transition: all 350ms ease-in-out;
  }
  @media screen and (min-width:1440px){
    .main-section-form{
    background-position: calc(50% - 200px) center;
  }
  }
</style>