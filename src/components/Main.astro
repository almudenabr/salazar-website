---
import Presentation from './SectionPresentation.astro';
import Challenge from './SectionChallenge.astro';
import Solution from './SectionSolution.astro';
import Features from './SectionFeatures.astro';
import Form from './SectionForm.astro';
import Hero from './SectionHero.astro';
---
<main>
  <section class="main-section-hero">
    <Hero />
  </section>
  <section class="main-section-presentation">
    <Presentation />
  </section>
  <section class="main-section-challenge">
    <Challenge />
  </section>
  <section class="main-section-solution">
    <Solution />
  </section>
  <section class="main-section-features">
    <Features />
  </section>
  <section class="main-section-form">
    <Form />
  </section>
</main>

<style>
  main{
    display: flex;
    flex-flow: column;
    gap:160px;
    width: 100%;
  }
  .main-section-hero{
    position: relative;
    z-index: 0;
  }
  .main-section-hero::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 451px;
    background-image: url('/images/bgImg_Hero_DarkDeath2x.png');
    background-repeat: no-repeat;
    background-size: 125%;
    background-position: center 1%;
    z-index: -1;
  }
  .main-section-solution{
    position: relative;
    background-color: #010101;
    z-index: 0;
  }
  .main-section-solution::after{
    display: block;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 451px;
    background-image: url('/images/bgSection_Solutions_2x.png');
    background-repeat: no-repeat;
    background-size: 125%;
    background-position: center 3%;
    z-index: -1;
  }
  .main-section-presentation{
    background: linear-gradient(
      0deg,
      rgba(98,186,243,0) 3%,
      rgba(98,186,243,0.2) 22%,
      rgba(98,186,243,0.25) 28%,
      rgba(98,186,243,0.2) 32%,
      rgba(98,186,243,0) 52%
      )
    
  }
</style>