---

const { title, id, nameIcon, ariaLabel } = Astro.props;
---
<button id={id} aria-label={ariaLabel}>
  { title && <span>{ title }</span> }
  { nameIcon && <i class={`pi ${nameIcon}`}></i>}
</button>

<style>
  button{
    appearance: none;
    height: 40px;
    background-color: rgb(var(--highlight));
    border:none;
    border-radius: 6px;
    padding-block:10px;
    padding-inline:16px;
    font-size: 14px;
    font-weight: 400;
    color: #1D1E27;
    transition: all 350ms;
  }
  button:hover{
    cursor: pointer;
    background-color: #75c9ff;
    scale: 1.05;
    box-shadow:0 0 40px 9px #2a4556  /* inner white */
  }
</style>