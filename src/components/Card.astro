---
const {class:className, cardId, cardDescription, cardHeader, ...rest} = Astro.props
---
<div class={className}{...rest} id={cardId} class:list={['card']}>
  <slot name="card-background-image" />
  <slot name="card-icon"></slot>
  <slot name="card-number"></slot>
    
  <div class="card-content">
    <div class:list={['card-header']}>
      {cardHeader}
    </div>
    <div class="card-description">
      <p>{cardDescription}</p>
    </div>
  </div>
</div>

<style>
  .card {
    width: 100%;
    background: #131a1e;
    border-radius: 16px;
    padding: 20px;
    display: flex;
    flex-flow: column;
    gap:40px;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
  }
  .card-content{
    display: flex;
    flex-flow: column;
    gap: 14px;
  }
  .card-header{
    font-size: 24px;
    line-height: 31.25px;
    font-weight:700
  }
  .card-header{
    white-space: initial;
  } 
  @media screen and (min-width:768px) {
    .card-header{
    white-space: pre-line;
  } 
  }
  
</style>