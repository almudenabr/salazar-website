---
import Logo from '../assets/logo_salazar.svg';
import { t } from 'i18next'
---

<header class="header">
  <div class="wrapper">
    <div class="header-top">
      <div class="logo">
        <a href="https://www.getsalazar.io" aria-label={t('button.homepage')}>
          <Logo height={32} width={130} aria-label="Salazar Logo"/>
        </a>
      </div>
      <slot name="button"/>
    </div>
  </div>
</header>

<style>
  header {
    width:100%;
    padding-block:16px;
    margin-bottom: 40px;
  }
  .header-top{
    display: flex;
    justify-content: space-between;
  }


</style>