---
import Button from './Button.astro'
import { t } from 'i18next'
---
<div class="wrapper-section-presentation" id="presentation-container">
  <div class="wrapper">
    <div class="section-presentation-content">
      <h2>{t('section.presentation.header')}</h2>
      <h3>{t('section.presentation.subheader')}</h3>
      <p>{t('section.presentation.paragraph')}</p>
    </div>
      <Button title={t('button.demo')} id="button-presentation-book-demo"/>
  </div>
</div>

<style>
  .wrapper-section-presentation{
    margin: auto;
    text-align:center;
    padding-block: 40px;
    margin-top: 0;
  }
  .section-presentation-content{
    max-width: 800px;
    display: flex;
    flex-flow: column;
    gap: 8px;
    margin:0 auto 14px;
  }
  h2{
    color: rgb(var(--highlight))
  }
</style>