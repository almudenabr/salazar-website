---
import Button from './Button.astro'
import { t } from 'i18next'

---
<div class="section-hero">
  <div class="wrapper">
    <div class="hero-content">
      <h1>{t('section.hero.header')}</h1>
      <h3>{t('section.hero.subheader')}</h3>
      <p>{t('section.hero.paragraph')}</p>
    </div>
    <div class="hero-image-wrapper">
      <div class="hero-image">
        <img src="/images/img_Hero_MockScreens2x.png">  
      </div> 
      <div class="hero-scroll">
        <Button id="hero-scroll-btn" nameIcon="pi-arrow-down"/>
      </div>
    </div>
  </div>
</div>

<style>
  .section-hero{
    height: 471px;
    margin: auto;
    display: flex;
    flex-flow: column;
    gap:40px;
    padding-block: 40px;
    text-align: center;
  }
  .hero-content{
    display: flex;
    flex-flow: column;
    gap: 16px;
  }
  .hero-content, .hero-image-wrapper{
    margin: auto;
    margin-top: 40px;
    text-align: center;
  }
  .hero-image-wrapper{
    width:100%;
    height: 325px;
    margin-top: 80px;
  }
  .hero-image{
    padding-inline:12px;
  }
  .hero-scroll{
    margin-block: 80px;
  }
  p{
    white-space: break-spaces;
  }
</style>