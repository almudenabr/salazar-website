---
import { Trans } from "astro-i18next/components";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from '../layouts/default.astro';
import {t} from 'i18next'
---
<Layout>
  <Header>
    <Fragment slot="button">
      <a href="/#form-container" id="link-button-demo" class="link-btn">{t('button.demo')}</a>
    </Fragment>
  </Header>
	<div class="wrapper">
		<script id="CookieDeclaration" src="https://consent.cookiebot.com/dfbdf771-91b3-4189-86dd-62e42a2f9adc/cd.js" type="text/javascript" async></script>
	</div>
  <Footer />
</Layout>
<style>
.link-btn{
	appearance: none;
	height: 40px;
	display: inline-flex;
	border-radius: 6px;
	padding-block:10px;
	padding-inline:16px;
	font-size: 14px;
	font-weight: 400;
	margin-right: 10px;
	transition: all 0.3s ease-out;  
}

.link-btn:hover{
	cursor: pointer;
	background-color: #75c9ff;
	scale: 1.05;
	box-shadow:0 0 40px 9px #2a4556  /* inner white */
}
#link-button-demo{
	background-color: rgb(var(--highlight));
	color: #1D1E27;
}
.cookie-policy{

}

</style>